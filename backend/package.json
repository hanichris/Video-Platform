    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.1",
    "node-mocks-http": "^1.12.2",
    "original-url": "^1.2.3",
    "qs": "^6.11.0",
    "redis": "^4.6.5",
    "uuid": "^9.0.0",
    "zod": "^3.20.2"
  }
}
